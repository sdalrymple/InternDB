%h1 Welcome to the Colgate Intern Database

%h2 Search Your Desired Experience 

= form_tag(root_path, :method => :get) do
  = label :experience, :industry,"Industry"
  = select :experience,:industry, ["", "The Arts/Design", "Business Services", "Communications/Media", "Consulting", "Computing/Technology", "Education", "Entertainment/Film/TV", "Environmental/Energy", "Financial Services", "Government/Public Service", "Healthcare", "Law/Legal", "Non-profit/Advocacy", "Sports/Leisure", "Scientific Research"]
  = label :experience, :season, "Season"
  = select :experience, :season, ["","Spring", "Winter", "Summer","Fall"]
  = label :experience, :organizaion, "Organization"
  = text_field :experience, 'organization'
  
  = label :experience, :city, "City"
  = text_field :experience, 'city'
  = label :experience, :state, "State"
  = text_field :experience, 'state'
  = submit_tag "Search"
  

%h3 Reviews:

%table#experiences
  %thead
    %tr
      %th=link_to 'Company', root_path(:sort => 'company'), :id => 'company_header'
      %th=link_to 'Industry', root_path(:sort => 'industry'), :id => 'industry_header'
      %th=link_to 'Role', root_path(:sort => 'role'), :id => 'role_header'
      %th=link_to 'Location', root_path(:sort => 'location'), :id => 'location_header'
      %th=link_to 'Date of Internship', root_path(:sort => 'internship_date'), :id => 'internship_date_header'
      %th=link_to 'Date of Review', root_path(:sort => 'review_date'), :id => 'review_date_header'
      %th=link_to 'Repeat?', root_path(:sort => 'repeat'), :id => 'repeat_header'
      %th=link_to 'Composite Rating', root_path(:sort => 'composite'), :id => 'composite_header'
      %th=link_to 'Work Relevancy', root_path(:sort => 'hands_on_rating'), :id => 'hands_on_rating_header'
      %th=link_to 'Networking', root_path(:sort => 'network_rating'), :id => 'network_rating_header'
      %th=link_to 'Exposure', root_path(:sort => 'exposure_rating'), :id => 'exposure_rating_header'
      %th View
  %tbody
    - @experiences.each do |ex|
      %tr
        %td= link_to ex.organization, "/experiences/company/#{ex.id}"
        %td= ex.industry
        %td= ex.function
        %td= ex.citystate
        %td= ex.date_str
        %td= ex.updated_at.to_date
        %td= ex.repeat?
        %td= ex.composite.round(2)
        %td= ex.hands_on_rating
        %td= ex.network_rating
        %td= ex.exposure_rating
        %td= link_to "View", "/experiences/#{ex.id}"
      
= link_to 'Share your experience', new_experience_path
